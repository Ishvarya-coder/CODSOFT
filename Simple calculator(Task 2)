#include <iostream>
using namespace std;
int main() {
 int a,b,result,choice;
 cout<<"Enter a:"<<endl;
 cin>>a;
 cout<<"Enter b:"<<endl;
 cin>>b;
 cout<<"Enter your choice: "<<endl;
 cout<<"1.Addition"<<endl;
  cout<<"2.Subraction"<<endl;
  cout<<"3. Multiplication"<<endl;
  cout<<"4.Division"<<endl;
  cout<<"Enter your operation: "<<endl;
  cin>>choice;
  switch(choice)
  {
    case 1:
      result=a+b;
      cout<<"The addition of two numbers is: "<<result<<endl;
      break;
    case 2:
      result=a-b;
      cout<<"The subraction of two numbers is: "<<result<<endl;
      break;
    case 3:
      result=a*b;
      cout<<"The multiplication of two numbers is: "<<result<<endl;
      break;
    case 4:
      result=a/b;
      cout<<"The division of two numbers is: "<<result<<endl;
      break;
    default:
        cout<<"Invalid operation"<<endl;
        break;
        
  }
}
